{
  "include": ["src"],
  "compilerOptions": {
    "strict": true,
    "declaration": true, // generates declaration files
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "outDir": "dst",
    "target": "es2018",
    "module": "ESNext",
    "importHelpers": true,
  },
  "exclude": [
    "lib",
    "node_modules",
    "src/**/*.spec.ts"
  ]
}
